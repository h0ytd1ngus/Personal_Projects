<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="#9a0000">

        <TextView
            android:id="@+id/detailShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:background="#9a0000"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_gravity="left|center_vertical" />

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_save"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#9a0000"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/detailMapFrag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Rating:"
            android:background="#9a0000"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="center_horizontal" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/detailReviewImage"
            android:layout_width="200dp"
            android:layout_marginLeft="50dp"
            android:layout_height="match_parent"
            android:gravity="right"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Avg Rating:"
            android:background="#9a0000"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/detailRating"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:text="Rating"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="left" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#9a0000"
            android:text="Address:"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/detailAddy"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:text="Address"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="left" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#9a0000"
            android:text="Phone:"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/detailPhone"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:text="Phone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="left" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#9a0000"
            android:text="Website: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/detailWeb"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:text="Website"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="left" />
    </LinearLayout>

</LinearLayout>